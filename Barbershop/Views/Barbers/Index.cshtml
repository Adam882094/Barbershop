@model IEnumerable<Barbershop.Models.Barber>

@{
    ViewData["Title"] = "Index";
}

<h1>Barbers</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.BarberName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.BarberId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.BarberId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.BarberId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
