@model Barbershop.Models.Appointment

@{
    ViewData["Title"] = "Delete";
}

<h1>Cancel</h1>

<h3>Are you sure you want to cancel this?</h3>
<div>
    <h4>Appointment</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Date
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AppointmentDateTime)
        </dd>
        <dt class = "col-sm-2">
            Barber
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Barber.BarberName)
        </dd>
        <dt class = "col-sm-2">
            Haircut
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Haircut.Name)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="AppointmentId" />
        <input type="submit" value="Cancel" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
